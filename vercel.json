{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/next"
      }
    ],
    "regions": ["lhr1"],
    "env": {
      "NEXT_PUBLIC_APP_URL": "https://geekcreations.com"
    },
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "camera=(), microphone=(), geolocation=()"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/webhook/:path*",
        "destination": "/api/webhook/:path*"
      }
    ],
    "crons": [
      {
        "path": "/api/cron/sync-inventory",
        "schedule": "0 */6 * * *"
      }
    ]
  }